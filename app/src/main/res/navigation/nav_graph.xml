<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/loginFragment">

    <!-- ðŸ”¹ Login Fragment -->
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.universityapp.ui.auth.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_signupFragment"
            app:destination="@id/signupFragment" />
        <action
            android:id="@+id/action_loginFragment_to_mainActivity"
            app:destination="@id/mainActivity" />
    </fragment>

    <!-- ðŸ”¹ Signup Fragment -->
    <fragment
        android:id="@+id/signupFragment"
        android:name="com.example.universityapp.ui.auth.SignupFragment"
        android:label="Signup"
        tools:layout="@layout/fragment_signup">
        <action
            android:id="@+id/action_signupFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>

    <!-- ðŸ”¹ MainActivity (host sifatida) -->
    <activity
        android:id="@+id/mainActivity"
        android:name="com.example.universityapp.ui.main.MainActivity"
        android:label="Main"
        tools:layout="@layout/activity_main" />
</navigation>