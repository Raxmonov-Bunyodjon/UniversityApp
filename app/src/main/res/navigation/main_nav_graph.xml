<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph">

    <!-- ðŸ”¹ Login Fragment -->
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.universityapp.ui.auth.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login">

        <!-- Signup fragmentga o'tish -->
        <action
            android:id="@+id/action_loginFragment_to_signupFragment"
            app:destination="@id/signupFragment" />

        <!-- Home fragmentga o'tish -->
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>

    <!-- ðŸ”¹ Signup Fragment -->
    <fragment
        android:id="@+id/signupFragment"
        android:name="com.example.universityapp.ui.auth.SignupFragment"
        android:label="Signup"
        tools:layout="@layout/fragment_signup">

        <!-- Login fragmentga qaytish -->
        <action
            android:id="@+id/action_signupFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>

    <!-- ðŸ”¹ Home Fragment -->
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.universityapp.ui.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">

        <!-- AddFacultyFragment ga o'tish -->
        <action
            android:id="@+id/action_homeFragment_to_addFacultyFragment"
            app:destination="@id/addFacultyFragment" />
    </fragment>



    <!-- ðŸ”¹ Add Faculty Fragment -->
    <fragment
        android:id="@+id/addFacultyFragment"
        android:name="com.example.universityapp.ui.main.faculty.addfaculty.AddFacultyFragment"
        android:label="Add Faculty"
        tools:layout="@layout/fragment_add_faculty" />


    <!-- ðŸ”¹ Add Student Fragment -->
    <fragment
        android:id="@+id/addStudentFragment"
        android:name="com.example.universityapp.ui.main.student.addstudent.AddStudentFragment"
        android:label="Add Student"
        tools:layout="@layout/fragment_add_student" />

</navigation>
